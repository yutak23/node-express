	"author": "yuta-katayama-23",
	"license": "MIT",
	"dependencies": {
		"@aws-sdk/client-dynamodb": "^3.423.0",
		"@aws-sdk/lib-dynamodb": "^3.423.0",
		"ajv": "^8.12.0",
		"ajv-formats": "^2.1.1",
		"any-base": "^1.1.0",
		"app-root-path": "^3.1.0",
		"bcrypt": "^5.1.1",
		"camelcase-keys": "^7.0.2",
		"chalk": "^4.1.2",
		"cli-table3": "^0.6.3",
		"commander": "^11.0.0",
		"compression": "^1.7.4",
		"config": "^3.3.9",
		"dotenv": "^16.3.1",
		"express": "^4.18.2",
		"express-openapi-validator": "^5.0.6",
		"lodash": "^4.17.21",
		"luxon": "^3.4.3",
		"make-error": "^1.3.6",
		"mysql2": "^3.6.1",
		"nanoid": "^3.3.4",
		"pad-left": "^2.1.0",
		"sequelize": "^6.33.0",
		"snakecase-keys": "^5.4.7",
		"source-map-support": "^0.5.21",
		"stripe": "^13.8.0"
	},
	"devDependencies": {
		"@babel/core": "^7.23.0",
		"@babel/eslint-parser": "^7.22.15",
		"@babel/plugin-proposal-throw-expressions": "^7.22.5",
		"@babel/preset-env": "^7.22.20",
		"@babel/register": "^7.22.15",
		"@commitlint/cli": "^17.7.2",
		"@commitlint/config-conventional": "^17.7.0",
		"babel-loader": "^9.1.3",
		"core-js": "^3.33.0",
		"eslint": "^8.50.0",
		"eslint-config-airbnb-base": "15.0.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-import": "^2.28.1",
		"eslint-plugin-jest": "^27.4.2",
		"eslint-webpack-plugin": "^4.0.1",
		"ioredis": "^5.3.2",
		"jest": "^29.7.0",
		"license-checker": "^25.0.1",
		"lint-staged": "^14.0.1",
		"nodemon": "^3.0.1",
		"npm-check-updates": "^16.14.4",
		"prettier": "^3.0.3",
		"regenerator-runtime": "^0.14.0",
		"sequelize-auto": "^0.8.8",
		"sequelize-cli": "^6.6.1",
		"simple-git-hooks": "^2.9.0",
		"vite-node": "^0.34.6",
		"webpack": "^5.88.2",
		"webpack-cli": "^5.1.4",
		"webpack-node-externals": "^3.0.0"
	},
	"scripts": {
		"dev": "webpack watch --node-env=development",
		"build": "webpack --node-env=production",
		"debug": "webpack --node-env=development",
		"start:watch": "nodemon dist/index.js",
		"lint": "eslint .",
		"format": "prettier --ignore-unknown --write ./",
		"test": "jest",
		"ncu": "npm-check-updates",
		"mysqldump:full": "docker exec -t mysql mysqldump -u root --databases node-express > ./mysql/sql/full.sql",
		"mysqldump:schema": "docker exec -t mysql mysqldump -u root --databases node-express --no-data | sed -e 's/ AUTO_INCREMENT=[0-9]*//' > ./mysql/sql/1_schema.sql",
		"mysqldump:data": "docker exec -t mysql mysqldump -u root -t --databases node-express --no-create-db > ./mysql/sql/2_data.sql",
		"create:table": "aws dynamodb create-table --cli-input-json file://./commands/create-table.json --endpoint-url http://localhost:8000",
		"db:migrate": "npx sequelize-cli db:migrate",
		"migration:generate": "npx sequelize-cli migration:generate",
		"models": "rm -rf ./src/models-auto/*.js && npx vite-node ./support/sequelize-auto.js && npx eslint --fix ./src/models-auto/* && npx prettier --ignore-unknown --write ./src/models-auto/*",
		"prepare": "npx simple-git-hooks"
	},
	"lint-staged": {
		"*": "npx prettier --ignore-unknown --write",
		"yarn.lock": "npx license-checker --production --failOn \"GPL;AGPL;LGPL;NGPL\" --summary"
	},
	"simple-git-hooks": {
		"pre-commit": "npx lint-staged --verbose",
		"commit-msg": "npx commitlint -e"
	}
}
